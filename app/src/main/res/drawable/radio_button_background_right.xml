<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape>
            <corners android:topRightRadius="@dimen/tendp" android:bottomRightRadius="@dimen/tendp" />
            <solid android:color="@color/colorPrimaryDarkMerchant" />
            <padding android:bottom="@dimen/tendp" android:left="@dimen/tendp"
                android:right="@dimen/tendp" android:top="@dimen/tendp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <corners android:topRightRadius="@dimen/tendp" android:bottomRightRadius="@dimen/tendp" />
            <solid android:color="@color/colorPrimaryDarkMerchant" />
            <stroke android:width="2dp" android:color="@color/colorPrimaryDarkMerchant" />
            <padding android:bottom="@dimen/tendp"
                android:left="@dimen/tendp"
                android:right="@dimen/tendp" android:top="@dimen/tendp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:topRightRadius="@dimen/tendp" android:bottomRightRadius="@dimen/tendp" />
            <stroke android:width="2dp" android:color="@color/colorPrimaryDarkMerchant" />
            <padding android:bottom="@dimen/tendp"
                android:left="@dimen/tendp" android:right="@dimen/tendp" android:top="@dimen/tendp" />
        </shape>
    </item>
</selector>