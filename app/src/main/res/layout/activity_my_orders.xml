<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/window_background" android:padding="@dimen/activity_horizontal_margin" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        layout="@layout/activity_progress"
        />

    <RelativeLayout android:id="@+id/lyt_my_order_detail" android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ListView android:id="@+id/lst_my_order" android:scrollbars="none" android:fadingEdge="none" android:layout_width="fill_parent" android:layout_height="fill_parent" android:divider="@color/transparent" android:dividerHeight="15.0dip" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/order_message"
        android:textSize="@dimen/text_20"
        android:visibility="gone"
        android:gravity="center"/>
</RelativeLayout>