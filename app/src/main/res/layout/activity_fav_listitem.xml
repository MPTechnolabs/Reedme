<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/fav">

            <RelativeLayout
                android:id="@+id/rel_iv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


             <TextView
                 android:id="@+id/store_id"
                 android:layout_width="wrap_content"
                 android:layout_height="170dp"
                 android:visibility="gone"/>
             <ImageView
                 android:id="@+id/img_category_item"
                 android:layout_width="match_parent"
                 android:layout_height="170dp"
                 android:scaleType="centerCrop"
                 android:src="@mipmap/logo"
                 app:border_color="@color/primaryColor"
                 app:border_width="2dp" />



            <TextView
                android:id="@+id/favflag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />


            <com.example.reedme.helper.MaterialFavoriteButton
                android:id="@+id/favorite_nice"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                app:mfb_rotation_duration="400"
                android:layout_marginBottom="@dimen/fivedp"
                app:mfb_rotation_angle="216"
                android:layout_alignParentBottom="true"
                app:mfb_bounce_duration="700" />
        </RelativeLayout>
            </RelativeLayout>

        <TextView
            android:id="@+id/txt_category_item_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:layout_below="@+id/fav"
            android:paddingTop="8dp"
            android:background="@drawable/button_login"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>



