<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:id="@+id/rel_sort"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/sort_bg">

        <TextView
            android:id="@+id/txt_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/fifteendp"
            android:text="Sort By"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <View
            android:id="@+id/view"
            android:layout_below="@+id/txt_sort"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/edt_search_text_bg" />


        <ListView
            android:id="@+id/lv_sort_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:divider="@color/edt_search_text_bg"
            android:dividerHeight="0.3dp">

        </ListView>

    </RelativeLayout>
</RelativeLayout>
