<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blue_ocen"
    android:fitsSystemWindows="true"
    android:layout_gravity="center"
    >



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/layout_login"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/twentydp"
                android:paddingRight="@dimen/twentydp"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/twenty"
                    android:src="@drawable/logo" />


                <ImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tendp"
                    android:src="@drawable/log_heart" />


                <TextView
                    android:id="@+id/txt_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/tendp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/tendp"
                    android:text="@string/merchant_login"
                    android:textColor="@color/search_text_subheading"
                    android:textSize="@dimen/text_18" />


                <EditText
                    android:id="@+id/edt_email_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edt_login_email_bg"
                    android:hint="Email"
                    android:paddingBottom="@dimen/tendp"
                    android:paddingLeft="@dimen/fourtydp"
                    android:layout_marginLeft="@dimen/tendp"
                    android:layout_marginRight="@dimen/tendp"
                    android:layout_marginTop="@dimen/twentydp"
                    android:paddingTop="@dimen/tendp"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/edt_search_text_bg"
                    android:textSize="@dimen/text_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_login_pass_bg"
                    android:layout_marginLeft="@dimen/tendp"
                    android:layout_marginRight="@dimen/tendp"
                    android:layout_marginTop="@dimen/tendp">


                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_toLeftOf="@+id/txt_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:hint="Password"
                        android:paddingBottom="@dimen/tendp"
                        android:paddingLeft="@dimen/fourtydp"
                        android:inputType="textPassword"
                        android:paddingTop="@dimen/tendp"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:background="@android:color/transparent"
                        android:textColorHint="@color/edt_search_text_bg"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/txt_show"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/tendp"
                        android:gravity="center"
                        android:padding="@dimen/fivedp"
                        android:layout_marginRight="@dimen/fivedp"
                        android:text="show"
                        android:textColor="@color/colorPrimaryMerchant"
                        android:textSize="@dimen/text_14" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twentydp"
                    android:layout_marginLeft="@dimen/tendp" android:layout_marginRight="@dimen/tendp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:onClick="Login"
                        android:background="@drawable/button_login_erchant"/>

                    <!-- android:background="@drawable/ripple_login"
-->

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteendp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_not_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/tendp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Not yet Registered? "
                        android:textColor="@color/grey_white"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/txt_register_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/tendp"
                        android:layout_marginTop="@dimen/tendp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Register Now"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_code"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:src="@mipmap/logo" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/msg_sit_back"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/msg_manual_code"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/inputCode"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:hint="Enter Code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn_verify_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:background="@color/colorPrimaryMerchant"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/btn_submit"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />

            </LinearLayout>



            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:indeterminateTint="@color/colorPrimaryDarkMerchant"
                android:indeterminateTintMode="src_atop"
                android:visibility="gone" />


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
