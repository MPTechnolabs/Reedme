<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialougshape">

    <RelativeLayout
        android:id="@+id/rel_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/green"
        >

        <TextView
            android:id="@+id/txt_title_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:text="Health Kumbh"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_main_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_title_dialog"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/iv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/alert_icon"/>


        <TextView
            android:id="@+id/txt_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="left|center"
            android:layout_below="@+id/iv_success"
            android:minHeight="60dp"
            android:scrollHorizontally="true"
            android:text="Alert"

            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt_message_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="left|center"
            android:layout_below="@+id/txt_success"
            android:minHeight="60dp"
            android:scrollHorizontally="true"
            android:text="Do You Want To Exit ??"
            android:textColor="@color/grey"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_main_box"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
      >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/rel_main_box"
            android:layout_centerHorizontal="true"
            android:background="@drawable/okbuttonshape"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Ok"
            android:textAllCaps="false"
            android:textColor="@color/yellow"
            android:textSize="18sp" />



    </LinearLayout>


</RelativeLayout>
