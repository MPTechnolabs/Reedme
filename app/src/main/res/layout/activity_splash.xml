<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@drawable/login_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout android:id="@+id/lyt_splash_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">

        <ImageView android:id="@+id/img_splash_icon" android:layout_width="200dp"
            android:layout_height="200dp" android:src="@drawable/logo" android:layout_centerHorizontal="true"  />

        <TextView android:textSize="26.0sp"  android:textColor="@color/white"
            android:id="@+id/txt_splash_icon_name" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip" android:text="Welcome To Reedme"
            android:layout_below="@+id/img_splash_icon"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>