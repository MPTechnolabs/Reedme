<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/blue_ocen"
    android:fitsSystemWindows="true">
    <include
        layout="@layout/activity_progress" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/text_10">

            <RelativeLayout
                android:id="@+id/rel_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/twentydp"
                    android:paddingRight="@dimen/twentydp">

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/text_10"
                        android:gravity="center"
                        android:padding="@dimen/fivedp"
                        android:text="Add Store"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_20" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tendp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/edt_fname"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/fill_bg"
                            android:hint="Enter Store Name *"
                            android:paddingBottom="@dimen/tendp"
                            android:paddingLeft="@dimen/tendp"
                            android:paddingTop="@dimen/tendp"
                            android:textColorHint="@color/edt_search_text_bg"
                            android:textSize="@dimen/text_14" />

                       <!-- <EditText
                            android:id="@+id/edt_lname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:background="@drawable/signup_lname_bg"
                            android:hint="Last Name *"
                            android:paddingBottom="@dimen/tendp"
                            android:paddingLeft="@dimen/tendp"
                            android:paddingTop="@dimen/tendp"
                            android:textColorHint="@color/edt_search_text_bg"
                            android:textSize="@dimen/text_14" />
-->
                    </LinearLayout>


                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/fivedp"
                        android:background="@drawable/signup_email_bg"
                        android:hint="Store Email ID *"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="@dimen/tendp"
                        android:paddingLeft="@dimen/fortyfive"
                        android:paddingTop="@dimen/tendp"
                        android:textColorHint="@color/edt_search_text_bg"
                        android:textSize="@dimen/text_14" />


                    <EditText
                        android:id="@+id/edt_category_select"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:background="@drawable/signup_arrow_bg_city"
                        android:gravity="center_vertical"
                        android:hint="Select Category"
                        android:paddingBottom="@dimen/tendp"
                        android:layout_marginTop="@dimen/fivedp"
                        android:paddingLeft="@dimen/tendp"
                        android:paddingTop="@dimen/tendp"
                        android:textColorHint="@color/edt_search_text_bg"
                        android:textSize="@dimen/text_14" />

                    <EditText
                        android:id="@+id/edt_discount"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/fill_bg"
                        android:hint="Enter Discount"
                        android:paddingBottom="@dimen/tendp"
                        android:inputType="number"
                        android:layout_marginTop="@dimen/fivedp"
                        android:paddingLeft="@dimen/tendp"
                        android:paddingTop="@dimen/tendp"
                        android:textColorHint="@color/edt_search_text_bg"
                        android:textSize="@dimen/text_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/fivedp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">



                        <EditText
                            android:id="@+id/edt_fromDate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="4"
                            android:paddingRight="@dimen/fivedp"
                            android:background="@drawable/signup_lname_bg"
                            android:hint="Offer From_Date"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:paddingBottom="@dimen/tendp"
                            android:paddingLeft="@dimen/tendp"
                            android:paddingTop="@dimen/tendp"
                            android:maxLength="12"
                            android:textColorHint="@color/edt_search_text_bg"
                            android:textSize="@dimen/text_14" />
                        <ImageView
                            android:id="@+id/img_from"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="left|center_vertical"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_calender"
                            android:scaleType="fitXY"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/fivedp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">



                        <EditText
                            android:id="@+id/edt_toDate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="4"
                            android:paddingRight="@dimen/fivedp"
                            android:background="@drawable/signup_lname_bg"
                            android:hint="Offer To_Date"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:paddingBottom="@dimen/tendp"
                            android:paddingLeft="@dimen/tendp"
                            android:paddingTop="@dimen/tendp"
                            android:maxLength="12"
                            android:textColorHint="@color/edt_search_text_bg"
                            android:textSize="@dimen/text_14" />
                        <ImageView
                            android:id="@+id/img_to"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="left|center_vertical"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_calender"
                            android:scaleType="fitXY"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/fivedp"
                        android:layout_weight="9"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="left|center_vertical"
                            android:layout_height="match_parent"
                            android:src="@drawable/ico_mo"
                            android:scaleType="fitXY"
                            />

                        <EditText
                            android:id="@+id/edt_mobile_number"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="4"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/signup_lname_bg"
                            android:hint="Mobile Number *"
                            android:inputType="number"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:paddingBottom="@dimen/tendp"
                            android:paddingLeft="@dimen/tendp"
                            android:paddingTop="@dimen/tendp"
                            android:maxLength="12"
                            android:textColorHint="@color/edt_search_text_bg"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tendp"
                        android:paddingLeft="@dimen/tendp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/fivedp"
                        android:textSize="@dimen/text_18"
                        android:textStyle="bold"
                        android:text="Store Image"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginTop="@dimen/fivedp"
                        android:layout_weight="4.5"
                        android:background="@drawable/signup_lname_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_store"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_gravity="left|center_vertical"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            />

                        <ImageView
                            android:id="@+id/img_camera"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1.5"
                            android:src="@drawable/myprofile_camera"
                            android:layout_marginLeft="@dimen/tendp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:paddingBottom="@dimen/tendp"

                            android:paddingLeft="@dimen/tendp"
                            android:paddingTop="@dimen/tendp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fifteendp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txt_country"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/tendp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:hint="Country *"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/text_14" />

                        <TextView
                            android:id="@+id/txt_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:hint="State *"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/eight"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/edt_country"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/tendp"
                            android:layout_weight="1"
                            android:background="@drawable/signup_arrow_bg_city"
                            android:gravity="center_vertical"
                            android:hint="Select Country"
                            android:padding="@dimen/tendp"
                            android:focusableInTouchMode="false"
                            android:focusable="false"

                            android:textColorHint="@color/edt_search_text_bg"
                            android:textSize="@dimen/text_14" />

                        <EditText
                            android:id="@+id/edt_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:background="@drawable/signup_arrow_bg_city"
                            android:gravity="center_vertical"
                            android:hint="Select State"
                            android:padding="@dimen/tendp"
                            android:focusableInTouchMode="false"
                            android:focusable="false"


                            android:textColorHint="@color/edt_search_text_bg"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/eight"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/edt_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/tendp"
                            android:layout_weight="1"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:background="@drawable/signup_arrow_bg_city"
                            android:gravity="center_vertical"
                            android:hint="Select City"
                            android:padding="@dimen/tendp"
                            android:textColorHint="@color/edt_search_text_bg"
                            android:textSize="@dimen/text_14" />

                        <EditText
                            android:id="@+id/edt_pincode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:background="@drawable/signup_select_city_without_arrow"
                            android:gravity="center_vertical"
                            android:hint="Pincode"
                            android:inputType="number"
                            android:padding="@dimen/tendp"
                            android:textColorHint="@color/edt_search_text_bg"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>


                    <EditText
                        android:id="@+id/edt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/tendp"
                        android:layout_weight="1"
                        android:background="@drawable/signup_address_fill"
                        android:gravity="top|left"
                        android:hint="Address *"
                        android:padding="@dimen/tendp"
                        android:textColorHint="@color/edt_search_text_bg"
                        android:textSize="@dimen/text_14" />
                    <com.example.reedme.custom.PlacesAutoCompleteEditText
                        android:id="@+id/edt_locality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/tendp"
                        app:south_bound="8"
                        app:west_bound="65"
                        app:north_bound="37"
                        app:east_bound="100"
                        app:item_layout="@layout/autocomplete_item"
                        app:item_text_id="@+id/text1"
                        android:layout_weight="1"
                        android:background="@drawable/signup_lname_bg"
                        android:layout_gravity="center_vertical"                        android:hint="Enter Locality *"
                        android:padding="@dimen/tendp"
                        android:textColorHint="@color/edt_search_text_bg"
                        android:textSize="@dimen/text_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/fifteendp"
                        android:layout_marginTop="@dimen/fifteendp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/iv_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_10"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/tendp"
                            android:background="@drawable/button_login_erchant"
                            android:textColor="@color/white"
                            android:text="Add Store"/>
                    </LinearLayout>




                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
